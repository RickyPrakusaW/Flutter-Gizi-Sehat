rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ATURAN SEMENTARA (Development Mode):
    // Mengizinkan semua user yang sudah LOGIN untuk membaca dan menulis data apa saja.
    // Ini solusi tercepat untuk memperbaiki error "Permission Denied" saat pengembangan.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // ---------------------------------------------------------------------------
    // ATURAN MASA DEPAN (Production Mode - Lebih Aman):
    // Gunakan ini nanti saat aplikasi siap rilis agar user hanya bisa edit datanya sendiri.
    // 
    // match /users/{userId} {
    //   allow read, write: if request.auth != null && request.auth.uid == userId;
    //   
    //   // Aturan untuk sub-collection (misal: data anak)
    //   match /children/{childId} {
    //     allow read, write: if request.auth != null && request.auth.uid == userId;
    //   }
    // }
    // ---------------------------------------------------------------------------
  }
}
